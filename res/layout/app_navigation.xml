<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/list"
        style="@style/List"
        android:layout_width="wrap_content"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:background="@drawable/lyric_desk_line_h" />

    <LinearLayout
        android:id="@+id/navigation_handy"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/dark_grey"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/setting"
            style="@style/Cell.Navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/navigation_handy_setting"
            android:gravity="center"
            android:text="@string/navigation_set"
            android:textColor="@android:color/white"
            android:textSize="12.0dip" />

        <TextView
            android:id="@+id/sleep"
            style="@style/Cell.Navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/navigation_handy_time"
            android:gravity="center"
            android:text="@string/menu_sleep_new"
            android:textColor="@android:color/white"
            android:textSize="12.0dip" />

        <TextView
            android:id="@+id/exit"
            style="@style/Cell.Navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/navigation_quit"
            android:gravity="center"
            android:text="@string/navigation_quit"
            android:textColor="@android:color/white"
            android:textSize="12.0dip" />
    </LinearLayout>

</LinearLayout>