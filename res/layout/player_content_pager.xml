<?xml version="1.0" encoding="utf-8"?>
<com.qylk.app.ui.player.widget.MyPager xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:qylk="http://schemas.android.com/apk/res/com.qylk.app.musicplayer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dark_grey"
    android:orientation="vertical" >

    <com.qylk.app.ui.SlidingIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="16.0dip"
        android:layout_gravity="center_horizontal"
        qylk:indicator_drawable="@drawable/bg_player_indicator"
        qylk:indicator_margin="6.0dip" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</com.qylk.app.ui.player.widget.MyPager>